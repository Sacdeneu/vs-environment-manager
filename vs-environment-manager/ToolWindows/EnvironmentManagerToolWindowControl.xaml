<UserControl x:Class="vs_environment_manager.ToolWindows.EnvironmentManagerToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="260" MinHeight="140">
    <Border BorderBrush="Red" BorderThickness="3" Padding="8" Margin="3">
        <StackPanel>
            <ItemsControl x:Name="VariablesListView" Margin="0,0,0,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="80" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="NewVarName" Width="80" Margin="0,0,10,0" FontWeight="Bold" />
                <TextBox x:Name="NewVarValue" Width="100" />
                <Button Content="+" Width="30" Margin="10,0,0,0" Click="AddVariable_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
